@page
@model LinguaNews.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>LinguaNews</title>
</head>
<body>
<div class="text-center">
    <h1 class="display-4">Welcome to LinguaNews</h1>
    <p class="lead">Your personal feed for news and language learning, combined.</p>
</div>

<hr />
    <div class="container mb-4">
        <form asp-action="Index" method="get" class="d-flex justify-content-center">
            <input type="text" name="searchQuery" class="form-control w-50 me-2"
                   placeholder="Search articles..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
<div class="container">
    <div class="row">

        @if (Model.Articles.Any())
        {
            @foreach (var article in Model.Articles)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="@article.Url" target="_blank" rel="noopener noreferrer">
                            <img src="@article.UrlToImage" class="card-img-top" alt="@article.Title" style="object-fit: cover; height: 200px;">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@article.Title</h5>

                            <h6 class="card-subtitle mb-2 text-muted">@article.SourceName</h6>

                            <p class="card-text">@article.Description</p>

                            <a href="@article.Url" class="btn btn-primary mt-auto" target="_blank" rel="noopener noreferrer">
                                Read Full Article
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No articles are available at this time. Please try again later.</p>
            </div>
        }

    </div>
</div>
</body>
</html>