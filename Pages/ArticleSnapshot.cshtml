@page
@model LinguaNews.Pages.ArticleSnapshotModel
@{
    ViewData["Title"] = "Article Snapshot"; // [NOTE: AI GENERATED front end code]
}

<div class="container mt-4">
    <div class="mb-4">
        <a asp-page="/Index" class="text-decoration-none text-secondary">
            <i class="bi bi-arrow-left"></i> &larr; Back to Search Results
        </a>

        <h1 class="mt-3 display-6">@Model.Snapshot?.Title</h1>

        <p class="text-muted">
            <strong class="text-primary">@Model.Snapshot?.SourceName</strong>
            &bull; Fetched: @Model.Snapshot?.FetchedAt.ToLocalTime().ToString("g")
            &bull; <a href="@Model.Snapshot?.ArticleUrl" target="_blank" class="text-muted">Read Original Source <i class="bi bi-box-arrow-up-right"></i></a>
        </p>

        @if (!string.IsNullOrEmpty(Model.Snapshot?.ImageUrl))
        {
            <div class="mb-4">
                <img src="@Model.Snapshot.ImageUrl" class="img-fluid rounded shadow-sm"
                     style="max-height: 300px; object-fit: cover; width: 100%;"
                     onerror="this.style.display='none'" alt="Article Hero Image">
            </div>
        }
    </div>
<div class="card p-3 mb-4 bg-light border-0 shadow-sm">
    <form method="post" class="row g-3 align-items-center">
        <input type="hidden" asp-for="ArticleUrl" />

        <div class="col-auto">
            <label class="col-form-label fw-bold">Target Language:</label>
        </div>

        <div class="col-auto">
            <select asp-for="TargetLanguage" class="form-select border-primary">
                <option value="EN">English</option>
                <option value="ES">Spanish (Español)</option>
                <option value="FR">French (Français)</option>
                <option value="DE">German (Deutsch)</option>
                <option value="IT">Italian (Italiano)</option>
                <option value="PT">Portuguese (Português)</option>
                <option value="JA">Japanese (日本語)</option>
                <option value="ZH">Chinese (中文)</option>
            </select>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-translate"></i> Generate Dictionary
            </button>
        </div>
    </form>
</div>

@if (Model.SentenceMap != null && Model.SentenceMap.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-table"></i> Sentence-by-Sentence Translation
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50%;">Original Text (English)</th>
                        <th style="width: 50%;">Translated (@Model.TargetLanguage)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SentenceMap)
                    {
                        <tr>
                            <td class="p-3 text-secondary">
                                @item.Key.Substring(item.Key.IndexOf('_') + 1)
                            </td>
                            <td class="p-3 text-dark fw-bold border-start">
                                @item.Value
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card border-secondary border-dashed p-5 text-center bg-light">
        <i class="bi bi-chat-square-text fs-1 text-muted mb-3"></i>
        <p class="lead mb-1">Article Content Ready</p>
        <p class="text-muted small mb-3">
            Click <strong>"Generate Dictionary"</strong> above to translate this article sentence-by-sentence using DeepL.
        </p>
        <hr class="w-25 mx-auto my-3">
        <p class="text-muted fst-italic text-start mx-auto" style="max-width: 700px;">
            "@Model.Snapshot?.TextToTranslate"
        </p>
    </div>
}
</div>